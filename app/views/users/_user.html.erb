<!-- ユーザー情報　-->
 <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, class:"attachment user profile_image", fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
        <tr>
        </tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th><%= link_to user.followings.count, following_user_path(user) %></th>
        </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to user.followers.count, followers_user_path(user) %></th>
        </tr>
        <tr>
          <th>
             <%= render 'follow_form', user: @user %>
          </th>
          <th></th>
        </tr>
    </tbody>
  </table>

<div class="row">
<% if user == current_user %>
  <p><%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
<% else %>
  <p><%= link_to "", user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
<% end %>
</div>